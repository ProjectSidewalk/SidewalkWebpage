# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.ApplicationController.index
GET     /about                      @controllers.ApplicationController.about
GET     /audit                      @controllers.ApplicationController.audit
GET     /test                       @controllers.ApplicationController.test

# Silhouette
GET     /home                       @controllers.UserController.index
GET     /signIn                     @controllers.UserController.signIn(url: String ?= "/")
GET     /signUp                     @controllers.UserController.signUp(url: String ?= "/")
GET     /signOut                    @controllers.UserController.signOut(url: String ?="/")
POST    /authenticate/credentials   @controllers.CredentialsAuthController.authenticate(url: String ?= "/")
POST    /signUp                     @controllers.SignUpController.signUp(url: String ?= "/")



# Postgres
# GET     /users                      controllers.UsersController.index
# POST    /users                      controllers.UsersController.save
# GET     /users/add                  controllers.UsersController.add
# GET     /users/:id             		controllers.UsersController.show(id: Int)
# POST    /users/:id             		controllers.UsersController.update(id: Int)
# GET     /users/:id/edit				controllers.UsersController.edit(id: Int)
# POST    /users/:id/delete			controllers.UsersController.delete(id: Int)


# Sidewalks
GET     /api/sidewalks              controllers.SidewalkController.listSidewalks
# POST    /sidewalks                controllers.SidewalkController.createSidewalks
# PUT     /sidewalks                controllers.SidewalkController.editSidewalks
# DELETE  /sidewalks/:id            controllers.SidewalkController.removeSidewalk(id: Int)

GET     /api/streets                controllers.StreetController.listStreets
GET     /api/join/:limit            controllers.StreetController.join(limit: Int)
GET     /api/select                 controllers.StreetController.select
GET     /task                       @controllers.TaskController.get
POST    /task                       @controllers.TaskController.post

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
